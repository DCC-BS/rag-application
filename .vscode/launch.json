    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "module": "streamlit",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}src${env:PYTHONPATH}"},
            "args": [
                "run",
                "src/ui/app.py"
            ],
        },
        {
            "name": "Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}src${env:PYTHONPATH}"},
            "args": [
                "run",
                "src/ui/app.py"
            ],
            "justMyCode": false
        }
    ]
}